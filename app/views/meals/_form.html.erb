<%= form_for @meal do |f| %>
    <%= f.label :day_name %>: 
    <%= f.text_field :day_name, placeholder: "Sunday" %><br>

    <%= f.label :meal_time %>: 
    <%= f.text_field :meal_time, placeholder: "Breakfast" %><br>

        <%= f.fields_for :dish, Dish.new do |dish_fields| %>
            <%= dish_fields.label :dish_name, "Dish Name" %>
            <%= dish_fields.text_field :dish_name, placeholder: "Pizza" %>
         <% end %>
    <br>

    <%= f.submit %>

    <% end %>

<% if @meal.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@meal.errors.count, "error") %>
      prohibited this meal from being saved:
    </h2>
 
    <ul>
    <% @meal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

 