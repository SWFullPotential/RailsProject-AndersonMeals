<%= form_for @meal do |f| %>
    <%= f.label :day_name %>: 
    <%= f.text_field :day_name, placeholder: "Sunday" %><br>

    <%= f.label :meal_time %>: 
    <%= f.text_field :meal_time, placeholder: "Breakfast" %><br>
        Select from existing dishes: 
    <%= f.collection_select :dish_id, Dish.all, :id, :dish_name, include_blank: true %><br>

        <%= f.fields_for :dish, @dish do |d| %>
            Create New Dish: 
            <%= d.text_field :dish_name, value: "" %>
        
         <% end %>

    <br>

    <%= f.submit %>
<% end %>
