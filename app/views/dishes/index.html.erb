<h1>All My Dishes</h1>

<%= form_tag(dishes_path, method: 'get') do %>
<%= text_field_tag :dish_term, nil, id: "Search", placeholder: "Search by Dish Name" %>
<%= submit_tag "Search" %>
<% end %>

<h3>FILTER: </h3>
<%= form_tag(dishes_path method: "get") do %>
<%= select_tag("dish[dish_id]"), options_from_collection_for_select(@dish, "id", "dish_name"), include_blank:true %>
<%# binding.pry%>
<%= submit_tag "Filter Dish"%>
<% end %>

<table id="meals">
        <tr>
            <th>Dish</th>
            <th>Day</th>
            <th>Meal</th>
        </tr>
    <% @dishes.each do |dish| %>
        <%# binding.pry %>
        <% if current_user.owns_dish?(dish) %>
            <tr>
            <% dish.meals.each do |meal| %>
                <td><%= meal.dish.dish_name %></td>
                <td><%= meal.day_name %></td>
                <td><%= meal.meal_time %></td>
            </tr>
            <% end %>
        <% end %>
    <% end %>
</table>
